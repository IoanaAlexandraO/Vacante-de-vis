<%
  function formatDenumire(val) {
    return val.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
  }

  function formatData(dateStr) {
    const luni = ["Ianuarie", "Februarie", "Martie", "Aprilie", "Mai", "Iunie", "Iulie", "August", "Septembrie", "Octombrie", "Noiembrie", "Decembrie"];
    const zile = ["DuminicÄƒ", "Luni", "MarÈ›i", "Miercuri", "Joi", "Vineri", "SÃ¢mbÄƒtÄƒ"];

    // VerificÄƒ dacÄƒ data existÄƒ
    if (!dateStr) return "DatÄƒ indisponibilÄƒ";
    
    // ConverteÈ™te la string È™i eliminÄƒ spaÈ›iile
    const dateString = String(dateStr).trim();
    if (!dateString) return "DatÄƒ indisponibilÄƒ";

    // Pentru formatul YYYY-MM-DD (cel mai comun pentru DATE din baza de date)
    const parts = dateString.split("-");
    if (parts.length === 3 && parts[0].length === 4) {
      const [an, luna, zi] = parts;
      const data = new Date(parseInt(an), parseInt(luna) - 1, parseInt(zi));
      
      // VerificÄƒ dacÄƒ data este validÄƒ
      if (isNaN(data.getTime())) {
        return "DatÄƒ invalidÄƒ";
      }

      return `${data.getDate()} ${luni[data.getMonth()]} ${data.getFullYear()} (${zile[data.getDay()]})`;
    }

    // Fallback - Ã®ncearcÄƒ sÄƒ parseze direct
    const data = new Date(dateString);
    if (isNaN(data.getTime())) {
      return "DatÄƒ invalidÄƒ";
    }

    return `${data.getDate()} ${luni[data.getMonth()]} ${data.getFullYear()} (${zile[data.getDay()]})`;
  }
%>

